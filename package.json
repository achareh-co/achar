{
  "name": "@achareh/achar",
  "version": "0.0.3",
  "description": "Set of modules that we use in Achareh",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/achareh-co/achar.git"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "modules",
    "achar"
  ],
  "author": "Mohammad Saleh Fadaei <ms.fadaei1997@gmail.com> (https://twitter.com/ms_fadaei)",
  "contributors": [
    "Reza Ramezani"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && unbuild",
    "prepack": "yarn build",
    "lint": "eslint --ext .ts,mjs --ignore-path .gitignore .",
    "play": "jiti playground/index.ts",
    "release": "yarn test && npx standard-version && git push --follow-tags && npm publish",
    "test": "yarn build && mocha ./test/*.test.*"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.test.mjs": "eslint --fix"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "9.0.0",
    "@types/flat": "latest",
    "@types/mocha": "9.1.0",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "chai": "4.3.6",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "husky": "7.0.4",
    "jiti": "latest",
    "lint-staged": "12.3.8",
    "mocha": "9.2.2",
    "prettier": "2.6.2",
    "sinon": "13.0.2",
    "standard-version": "9.5.0",
    "typescript": "4.8.3",
    "unbuild": "0.8.10"
  },
  "dependencies": {},
  "peerDependencies": {}
}
